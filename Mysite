      transition: all 0.6s ease;
    }

    .card.show {
      opacity: 1;
      transform: translateY(0);
    }

    footer {
      background: #222;
      color: white;
      text-align: center;
      padding: 1rem;
      margin-top: 2rem;
    }

    /* Animations */
    @keyframes fadeIn {
      to { opacity: 1; }
    }

    /* Responsive Navigation */
    @media (max-width: 768px) {
      .menu {
        flex-direction: column;
